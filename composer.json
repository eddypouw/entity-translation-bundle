{
    "name":        "hostnet/entity-translation-bundle",
    "description": "Translation bundle to help with rendering pretty names for enum-like classes.",
    "license":     "MIT",
    "type":        "symfony-bundle",
    "require": {
        "php":                          "^7.0|^5.6",
        "doctrine/annotations":         "^1.3",
        "symfony/config":               "^4.0|^3.0|^2.7",
        "symfony/dependency-injection": "^4.0|^3.0|^2.7",
        "symfony/framework-bundle":     "^4.0|^3.0|^2.7",
        "symfony/http-kernel":          "^4.0|^3.0|^2.7",
        "symfony/routing":              "^4.0|^3.0|^2.7",
        "symfony/translation":          "^4.0|^3.0|^2.7",
        "symfony/yaml":                 "^4.0|^3.0|^2.7"
    },
    "require-dev": {
        "hostnet/phpcs-tool": "^4.1.2",
        "phpunit/phpunit":    "^5.0|^4.8",
        "symfony/finder":     "^4.0|^3.0|^2.7"
    },
    "autoload": {
        "psr-4": {
            "Hostnet\\Bundle\\EntityTranslationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hostnet\\Bundle\\EntityTranslationBundle\\": "test/"
        },
        "classmap": [
            "test/Functional/Fixtures/TestKernel.php"
        ]
    },
    "authors": [
        {
            "name":  "Iltar van der Berg",
            "email": "ivanderberg@hostnet.nl"
        },
        {
            "name":  "Yannick de Lange",
            "email": "ydelange@hostnet.nl"
        }
    ],
    "minimum-stability" : "dev"
}
